#   git config -f ~/.gitconfig.local user.email me@example.com
[alias]
  ftag = push --tags --force
  home = "!git checkout $(git symbolic-ref --short HEAD); git pull"
  subup = submodule update --remote --merge --recursive
  yolo = commit --amend --no-edit
[color]
  ui = true
[color "diff"]
  meta = blue
  frag = magenta
  old = red
  new = green
[commit]
  gpgsign = true
[core]
  editor = ~/bin/editor
  pager = less -rFX
  excludesfile = ~/.gitignore
[github]
  user = adamcstephens
[include]
  path = .gitconfig.local
[init]
  templateDir = ~/.config/git/template/
  defaultBranch = main
[pull]
  rebase = false
[push]
  default = tracking
[tag]
  gpgsign = true
[url "git@github.com:adamcstephens"]
  pushInsteadOf = https://github.com/adamcstephens
[user]
  name = Adam Stephens
