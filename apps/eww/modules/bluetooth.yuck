(defwidget bluetooth []
  (eventbox
    :onhover "${EWW_CMD} update bt_rev=true"
    :onhoverlost "${EWW_CMD} update bt_rev=false"
    (box
      :space-evenly "false"
      (button
        :class "module-bt module"
        :onclick "blueman"
        :style "color: ${bluetooth.color};"
      {bluetooth.icon}))))
