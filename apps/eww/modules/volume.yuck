(defwidget volume []
  (eventbox
    :onhover "${EWW_CMD} update vol_reveal=true"
    :onhoverlost "${EWW_CMD} update vol_reveal=false"
    (box
      :class "module"
      :space-evenly "false"
      :spacing "3"
      (button
        :onclick "./scripts/pop volume"
        :class "vol-icon"
      {volume.icon}))))
