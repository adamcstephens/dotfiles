{
  "[cabal]": {
    "editor.defaultFormatter": "berberman.vscode-cabal-fmt"
  },
  "[elixir]": {
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[haskell]": {
    "editor.defaultFormatter": "haskell.haskell"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[markdown]": {
    "editor.wordBasedSuggestionsMode": "currentDocument"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },
  "[yaml]": {
    "editor.wordBasedSuggestionsMode": "currentDocument"
  },
  "breadcrumbs.enabled": true,
  "debug.internalConsoleOptions": "neverOpen",
  "diffEditor.renderSideBySide": true,
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorSurroundingLines": 10,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "JetBrainsMono NF, JetBrainsMono Nerd Font, JetBrains Mono, Material Design Icons, Material Icons",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.inlayHints.enabled": "onUnlessPressed",
  "editor.inlayHints.fontFamily": "default",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "selection",
  "editor.rulers": [120],
  "editor.suggest.preview": true,
  "editor.tabSize": 2,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.env": "shellscript",
    "*.keymap": "c",
    "*.overlay": "c",
    "*.sls": "yaml",
    "*.yaml.gotmpl": "yaml",
    "**/*.bst": "yaml",
    "Gemfile*": "ruby",
    "Jenkinsfile*": "groovy",
    "Pipefile": "toml"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.ignoreMissingGitWarning": true,
  "github.gitAuthentication": false,
  "gitlens.plusFeatures.enabled": false,
  "gitlens.showWelcomeOnInstall": false,
  "gitlens.showWhatsNewAfterUpgrades": false,
  "go.toolsManagement.autoUpdate": true,
  "haskell.manageHLS": "GHCup",
  "javascript.format.semicolons": "remove",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "prettier.printWidth": 120,
  "prettier.semi": false,
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.venvPath": "~/.local/share/virtualenvs",
  "redhat.telemetry.enabled": false,
  "remote.SSH.defaultExtensions": [
    "esbenp.prettier-vscode",
    "jnoortheen.nix-ide",
    "mkhl.direnv",
    "mkhl.shfmt",
    "redhat.vscode-yaml",
    "timonwong.shellcheck",
    "JakeBecker.elixir-ls",
    "kamadorueda.alejandra"
  ],
  "remote.SSH.lockfilesInTmp": true,
  "remote.SSH.remotePlatform": {
    "arch1": "linux",
    "blank": "linux",
    "cloud1": "linux",
    "compose1": "linux",
    "netdev3": "linux",
    "nixos1": "linux",
    "nixos2": "linux",
    "alpine1": "linux",
    "frank": "linux",
    "tank": "linux"
  },
  "scm.defaultViewMode": "tree",
  "search.useGlobalIgnoreFiles": true,
  "security.workspace.trust.untrustedFiles": "open",
  "shellcheck.disableVersionCheck": true,
  "shellcheck.exclude": ["SC1117", "SC2039"],
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.scrollback": 20000,
  "terminal.integrated.tabs.enabled": true,
  "window.autoDetectColorScheme": true,
  "window.nativeFullScreen": false,
  "window.newWindowDimensions": "inherit",
  "window.restoreWindows": "none",
  "window.titleBarStyle": "custom",
  "workbench.colorCustomizations": {
    "[Sonokai Andromeda]": {
      "gitDecoration.ignoredResourceForeground": "#565864",
      "quickInputList.focusBackground": "#363a4e80",
      "terminal.ansiBlack": "#181a1c",
      "terminal.ansiBrightBlack": "#7e8294",
      "terminal.background": "#2b2d3a"
    }
  },
  "workbench.colorTheme": "An Old Hope Italic",
  "workbench.editor.decorations.badges": true,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.showIcons": false,
  "workbench.editor.untitled.hint": "hidden",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.preferredDarkColorTheme": "An Old Hope Italic",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.renderIndentGuides": "always",
  "yaml.customTags": ["!encrypted/pkcs1-oaep scalar", "!vault scalar"],
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideTabs": false,
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "yaml.schemas": {
    "https://json.schemastore.org/taskfile.json": "taskfiles/*"
  },
  "[fish]": {
    "editor.defaultFormatter": "bmalehorn.vscode-fish"
  },
  "[nix]": {},
  "window.commandCenter": true,
  "git.mergeEditor": true,
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  },
  "gitlens.codeLens.enabled": false,
  "nix.formatterPath": "alejandra",
  "nix.serverPath": "nil",
  "terraform.languageServer.enable": true,
  "terraform.languageServer.path": "",
  "nix.enableLanguageServer": true,
  "editor.stickyScroll.enabled": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  }
}
