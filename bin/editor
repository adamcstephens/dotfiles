#!/usr/bin/env sh

if [ "$USER" != "root" ]; then
  if [ "$TERM_PROGRAM" = "vscode" ]; then
    case $TERM_PROGRAM_VERSION in
    *-insider)
      exec code-insiders --wait $@
      ;;
    *)
      exec code --wait $@
      ;;
    esac
  elif command -v emacsclient >/dev/null 2>&1 && pgrep emacs; then
    export IS_EDITOR=true
    exec em $@
  elif command -v hx >/dev/null 2>&1; then
    exec hx $@
  else
    exec vim $@
  fi
fi
