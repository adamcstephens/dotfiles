#!/usr/bin/env sh

if ! command -v emacsclient >/dev/null 2>&1; then
  echo "No emacsclient, falling back to editor"
  exec ~/.dotfiles/bin/editor $@
fi

OLDTERM=$TERM

if [ ! -e ~/.config/systemd/user/emacs.service ]; then
  case $(uname -s) in
    Darwin)
      pgrep -i emacs >/dev/null 2>&1
      rc=$?
      ;;
    *)
      pgrep emacs >/dev/null 2>&1
      rc=$?
      ;;
  esac
  [ $rc -eq 0 ] || emacs --bg-daemon=$(hostname)
fi

if [ -e ~/.terminfo/x/xterm-emacs ] || [ -e ~/.terminfo/78/xterm-emacs ]; then
  export TERM=xterm-emacs
else
  export TERM=xterm-256color
fi

emacsclient --tty --socket-name=$(hostname) "$@"

# shellcheck disable=SC2086
export TERM=$OLDTERM
