#!/usr/bin/env sh

# avoid a loop
SCRIPT_PATH=$(dirname "$(realpath "$0")")
PATH="$(echo "$PATH" | sed -e "s,$SCRIPT_PATH:,,")"
export PATH

if command -v delta >/dev/null 2>&1; then
  differ="delta"
elif command -v colordiff >/dev/null 2>&1; then
  differ="colordiff"
else
  differ="diff"
fi

exec $differ "$@"
